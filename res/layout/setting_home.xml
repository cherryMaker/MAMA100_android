<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:paddingTop="24dp" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_call"
            android:minHeight="84dp"
            android:minWidth="84dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/call_parenting_adviser"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tv_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/parenting_adviser_phone"
                android:textColor="@color/mama100Orange"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/call400_charge_tips"
                android:textColor="@color/black"
                android:textSize="12dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_changepwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/setting_tab_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_changepwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_changepwd"
            android:drawableRight="@drawable/selector_rightarrow"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="@string/change_pwd"
            android:textColor="@color/btn_text_color" android:paddingLeft="1dp" android:paddingRight="3dp" android:textSize="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_aboutus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/setting_toptab_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/tv_changepwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_about"
            android:drawableRight="@drawable/selector_rightarrow"
            android:gravity="center_vertical"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="@string/about_us"
            android:textColor="@color/btn_text_color" android:paddingLeft="1dp" android:paddingRight="3dp" android:textSize="16dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgV_line1"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/setting_line" />

    <LinearLayout
        android:id="@+id/layout_feedback"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_centertab_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/tv_changepwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_advice"
            android:drawableRight="@drawable/selector_rightarrow"
            android:gravity="center_vertical"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="@string/feed_back"
            android:textColor="@color/btn_text_color" android:paddingLeft="1dp" android:paddingRight="3dp" android:textSize="16dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgV_line2"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/setting_line" />

    <LinearLayout
        android:id="@+id/layout_checkversion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/setting_buttomtab_selector"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingTop="4dp" >

        <TextView
            android:id="@+id/tv_changepwd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_update"
            android:drawableRight="@drawable/selector_rightarrow"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:paddingTop="6dp"
            android:text="@string/check_version"
            android:textColor="@color/btn_text_color" android:paddingLeft="1dp" android:paddingRight="3dp" android:textSize="16dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_cancel_account"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:background="@drawable/selector_logout"
        android:minHeight="36dp"
        android:textColor="@color/white" />

</LinearLayout>