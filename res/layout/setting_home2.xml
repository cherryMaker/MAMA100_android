<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/selector_call"
                android:minHeight="84dp"
                android:minWidth="84dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="@string/call_parenting_adviser"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tv_phonenum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/parenting_adviser_phone"
                    android:textColor="@color/mama100Orange"
                    android:textSize="24dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/call400_charge_tips"
                    android:textColor="@color/black"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp" >

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_login_l"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/layout_inf"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_toptab_selector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/tv_inf"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_inf"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/selector_rightarrow"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="3dp"
                    android:paddingTop="7dp"
                    android:text="个人信息"
                    android:textColor="@color/btn_text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_account"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/set_tab3_margin_top"
                android:background="@drawable/setting_centertab_selector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_account"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/selector_rightarrow"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="3dp"
                    android:paddingTop="7dp"
                    android:text="帐号设置"
                    android:textColor="@color/btn_text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_changepwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/set_tab4_margin_top"
                android:background="@drawable/setting_buttomtab_selector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/tv_changepwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_changepwd"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/selector_rightarrow"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="3dp"
                    android:paddingTop="7dp"
                    android:text="@string/change_pwd"
                    android:textColor="@color/btn_text_color"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp" >

            <LinearLayout
                android:id="@+id/layout_aboutus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_toptab_selector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@id/tv_changepwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_about"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/selector_rightarrow"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="3dp"
                    android:paddingTop="7dp"
                    android:text="@string/about_us"
                    android:textColor="@color/btn_text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_feedback"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/set_tab3_margin_top"
                android:background="@drawable/setting_centertab_selector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/tv_changepwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_advice"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/selector_rightarrow"
                    android:gravity="center_vertical"
                    android:paddingBottom="7dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="3dp"
                    android:paddingTop="7dp"
                    android:text="@string/feed_back"
                    android:textColor="@color/btn_text_color"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_checkversion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/set_tab4_margin_top"
                android:background="@drawable/setting_buttomtab_selector"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:paddingBottom="4dp"
                android:paddingTop="4dp" >

                <TextView
                    android:id="@+id/tv_changepwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon_update"
                    android:drawablePadding="1dp"
                    android:drawableRight="@drawable/selector_rightarrow"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="1dp"
                    android:paddingRight="3dp"
                    android:paddingTop="6dp"
                    android:text="@string/check_version"
                    android:textColor="@color/btn_text_color"
                    android:textSize="16dp" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_cancel_account"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="@dimen/set_cancelbtn_margin_top"
            android:background="@drawable/selector_logout"
            android:minHeight="36dp"
            />
    </LinearLayout>

</ScrollView>