<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bbshop_item_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:src="@drawable/bt_calendar_on"
            android:text="爱婴岛店(test)"
            android:textColor="@color/mama100Orange2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgV_loc_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="5dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/spot" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgV_loc_img"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@+id/imgV_loc_img"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="(test)广东广州市天河区珠江新城"
            android:textColor="#9f9f9f"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgV_loc_img"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/tv_location"
            android:singleLine="true"
            android:text="300t"
            android:textColor="#9f9f9f"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imgV_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@+id/tv_location"
            android:layout_marginTop="4dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/popularity" />

        <TextView
            android:id="@+id/tv_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgV_pop"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/imgV_pop"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="4000人(test)"
            android:textColor="#9f9f9f"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/imgV_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgV_img_bg"
            android:layout_alignParentRight="true"
            android:background="@drawable/list_arrow"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgV_img_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:layout_toLeftOf="@+id/imgV_arrow"
            android:background="@drawable/babyshop_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgV_img_bg"
            android:layout_alignLeft="@id/imgV_img_bg"
            android:layout_alignRight="@id/imgV_img_bg"
            android:layout_alignTop="@id/imgV_img_bg"
            android:orientation="vertical"
            android:padding="2dp" >

            <ImageView
                android:id="@+id/imgV_img"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_linear"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_title"
            android:layout_below="@+id/imgV_pop"
            android:layout_marginTop="16dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imgV_withvip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/with_vip"
                android:onClick="onClickPrivilege" />

            <ImageView
                android:id="@+id/imgV_withcard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:background="@drawable/with_card"
                android:onClick="onClickPrivilege" />

            <ImageView
                android:id="@+id/imgV_withexch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/with_exch"
                android:onClick="onClickPrivilege" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgV_arrow"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableRight="@drawable/selector_click_shop_item"
            android:paddingTop="24dp" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_detail"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/shop_list_line" />
    </RelativeLayout>

</LinearLayout>